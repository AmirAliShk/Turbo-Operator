<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SupportActivity">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/bg_action_bar_purple"
        android:layoutDirection="rtl">

        <LinearLayout
            android:id="@+id/llStatus"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_activate_status"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnActivate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="فعال"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnDeActivate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="غیر فعال"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="15dp"
            android:src="@drawable/ic_back" />

        <ImageView

            android:id="@+id/imgCallQuality"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/imgBack"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_quality_0"
            android:visibility="invisible" />


        <LinearLayout
            android:id="@+id/llEndCall"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|bottom"
                android:text="00:58"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.gauravbhola.ripplepulsebackground.RipplePulseLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clipChildren="false"
                    android:gravity="center"
                    app:duration="1500"
                    app:endRadius="25dp"
                    app:rippleColor="@color/colorWhite"
                    app:rippleType="stroke"
                    app:startRadius="13dp"
                    app:strokeWidth="1dp" />

                <ImageView
                    android:id="@+id/imgEndCall"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@drawable/ic_end_call" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="در حال بررسی" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جدید"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpSupport"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>