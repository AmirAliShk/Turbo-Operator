<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="?attr/colorActionBarBackground"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/header_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/llHeaderIcons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/ic_operator_user" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/circle_shadow"
                android:padding="10dp"
                android:src="@drawable/ic_notification" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgMessage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/circle_shadow"
                android:padding="11dp"
                android:src="@drawable/ic_message" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgTheme"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/circle_shadow"
                android:padding="10dp"
                android:src="@drawable/ic_dark" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtBadgeCount"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_badge"
            android:gravity="center"
            android:text="1"
            app:layout_constraintTop_toTopOf="@id/llHeaderIcons"
            app:layout_constraintLeft_toLeftOf="@id/llHeaderIcons"
            app:layout_constraintBottom_toBottomOf="@id/llHeaderIcons"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:elevation="@dimen/_5sdp"
            android:textColor="?attr/colorTitle"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="?attr/colorPageBackground"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPageBackground"
        android:gravity="center"
        android:layout_weight="0.75">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layoutDirection="rtl"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@color/transparent"
            app:tabGravity="center"
            app:tabMode="fixed" />

    </LinearLayout>

</LinearLayout>