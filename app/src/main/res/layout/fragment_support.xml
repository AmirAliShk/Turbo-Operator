<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryLighter"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".fragment.SupportFragment">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#792ca9"
        android:layoutDirection="ltr">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/support"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_header" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/imgClear"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_reject" />

        <EditText
            android:id="@+id/edtSearchTrip"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:hint="search box"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/grayMedium"
            android:layout_height="match_parent"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/imgSearchType"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_call_1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleTrip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_trip"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>