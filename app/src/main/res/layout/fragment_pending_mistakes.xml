<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLighter"
    android:clickable="true"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="20dp">

    <ViewFlipper
        android:id="@+id/vfPending"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:indicatorColor="@color/colorPrimaryDark"
            app:indicatorName="BallBeatIndicator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_blue_border_edge"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="تاریخ" />

                        <TextView
                            android:id="@+id/txtTripDate"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="ساعت" />

                        <TextView
                            android:id="@+id/txtTripTime"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="توضیحات" />

                        <TextView
                            android:id="@+id/txtDescription"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.21"
                            android:gravity="center_vertical"
                            android:text="نام مسافر" />

                        <TextView
                            android:id="@+id/txtPassengerName"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:gravity="center_vertical" />

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="تلفن" />

                        <TextView
                            android:id="@+id/txtPassengerPhone"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.45"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/city" />

                        <TextView
                            android:id="@+id/txtCity"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/originAddress" />

                        <TextView
                            android:id="@+id/txtOriginAddress"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/originStation" />

                        <TextView
                            android:id="@+id/txtOriginStation"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/destAddress" />

                        <TextView
                            android:id="@+id/txtDestAddress"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:text="@string/destStation" />

                        <TextView
                            android:id="@+id/txtDestStation"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/price" />

                        <TextView
                            android:id="@+id/txtPrice"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="اپراتور ثبت سفر" />

                        <TextView
                            android:id="@+id/txtUserCode"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="اپراتور ایستگاه مبدا" />

                        <TextView
                            android:id="@+id/txtUserCodeOrigin"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical|right" />

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="اپراتور ایستگاه مقصد" />

                        <TextView
                            android:id="@+id/txtUserCodeDestination"
                            style="@style/tripItemValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical|right" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            style="@style/tripItemTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="مکالمه سفر" />

                        <ViewFlipper
                            android:id="@+id/vfVoiceStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.warkiz.widget.IndicatorSeekBar
                                    android:id="@+id/skbTimer"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:layout_weight="2.5"
                                    app:isb_seek_smoothly="true"
                                    app:isb_show_indicator="none"
                                    app:isb_thumb_color="@color/colorPrimaryDark"
                                    app:isb_thumb_size="15dp"
                                    app:isb_track_background_color="@color/grayLight"
                                    app:isb_track_background_size="3dp"
                                    app:isb_track_progress_color="@color/colorPrimaryDark"
                                    app:isb_track_progress_size="5dp" />

                                <ViewFlipper
                                    android:id="@+id/vfPlayPause"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_below="@id/skbTimer"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:elevation="3dp">

                                    <ImageView
                                        android:id="@+id/imgPlay"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:padding="10dp"
                                        android:src="@drawable/ic_play" />

                                    <com.wang.avi.AVLoadingIndicatorView
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_gravity="center"
                                        app:indicatorColor="@color/colorPrimaryDark"
                                        app:indicatorName="BallBeatIndicator" />

                                    <ImageView
                                        android:id="@+id/imgPause"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:padding="10dp"
                                        android:src="@drawable/ic_stop" />

                                </ViewFlipper>

                            </LinearLayout>

                            <TextView

                                style="@style/tripItemValue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|right|center_vertical"
                                android:text="صوتی برای این تماس وجود ندارد."
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        </ViewFlipper>

                    </LinearLayout>

                    <ViewFlipper
                        android:id="@+id/vfMissedCall"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/skbTimer"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_item_icon"
                        android:elevation="3dp">

                        <LinearLayout
                            android:id="@+id/llMissedCall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_message" />

                            <TextView
                                style="@style/tripItemValue"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ارسال پیامک تماس بی‌پاسخ"
                                android:textColor="@color/colorWhite" />

                        </LinearLayout>

                        <com.wang.avi.AVLoadingIndicatorView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            app:indicatorColor="@color/colorWhite"
                            app:indicatorName="BallBeatIndicator" />

                    </ViewFlipper>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ViewFlipper
                    android:id="@+id/vfSaveResult"
                    android:layout_width="0dp"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_weight="2.5"
                    android:background="@drawable/bg_circle_green">

                    <Button
                        android:id="@+id/btnSaveResult"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="ثبت نتیجه "
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:indicatorColor="@color/colorWhite"
                        app:indicatorName="BallBeatIndicator" />

                </ViewFlipper>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnOptions"
                    android:layout_width="0dp"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_weight="1"
                    android:background="@drawable/bg_strock_corner"
                    android:text="گزینه ها"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_header"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="موردی برای بررسی قبول نکرده اید!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlack" />

    </ViewFlipper>

</LinearLayout>