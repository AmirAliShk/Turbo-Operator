<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLighter"
    android:clickable="true"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="20dp">

    <ViewFlipper
        android:id="@+id/vfPending"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:indicatorColor="@color/colorPrimaryDark"
            app:indicatorName="BallBeatIndicator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/bg_blue_border_edge"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="تاریخ" />

                    <TextView
                        android:id="@+id/txtTripDate"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ساعت" />

                    <TextView
                        android:id="@+id/txtTripTime"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="توضیحات" />

                    <TextView
                        android:id="@+id/txtDescription"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="نام مسافر" />

                    <TextView
                        android:id="@+id/txtPassengerName"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="تلفن" />

                    <TextView
                        android:id="@+id/txtPassengerPhone"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/city" />

                    <TextView
                        android:id="@+id/txtCity"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/customerAddress" />

                    <TextView
                        android:id="@+id/txtAddress"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ایستگاه" />

                    <TextView
                        android:id="@+id/txtStationCode"
                        style="@style/tripItemValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        style="@style/tripItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="مکالمه سفر" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/skbTimer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="none"
                        app:isb_thumb_color="@color/colorPrimaryDark"
                        app:isb_thumb_size="15dp"
                        app:isb_track_background_color="@color/grayLight"
                        app:isb_track_background_size="3dp"
                        app:isb_track_progress_color="@color/colorPrimaryDark"
                        app:isb_track_progress_size="5dp" />

                    <ViewFlipper
                        android:id="@+id/vfPlayPause"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/skbTimer"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:elevation="3dp">

                        <ImageView
                            android:id="@+id/imgPlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_play" />

                        <com.wang.avi.AVLoadingIndicatorView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            app:indicatorColor="@color/colorPrimaryDark"
                            app:indicatorName="BallBeatIndicator" />

                        <ImageView
                            android:id="@+id/imgPause"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_stop" />

                    </ViewFlipper>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtMistakesId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtMistakesVoipId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/btnSaveResult"
                    style="@style/button"
                    android:layout_width="0dp"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_weight="2.5"
                    android:background="@drawable/bg_circle_green"
                    android:text="ثبت نتیجه "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnOptions"
                    android:layout_width="0dp"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_weight="1"
                    android:background="@drawable/bg_strock_corner"
                    android:text="گزینه ها"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_header"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="موردی برای بررسی قبول نکرده اید!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlack" />

    </ViewFlipper>


</LinearLayout>