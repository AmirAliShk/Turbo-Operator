<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPageBackground"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="ir.taxi1880.operatormanagement.fragment.ShiftListFragment">

   <RelativeLayout
       android:id="@+id/rlActionBar"
       android:layout_width="match_parent"
       android:layout_height="?android:attr/actionBarSize"
       android:layoutDirection="ltr"
       android:background="?attr/colorActionBarBackground">

      <ImageView
          android:id="@+id/imgBack"
          android:padding="15dp"
          android:src="@drawable/ic_back"
          android:layout_width="?android:attr/actionBarSize"
          android:layout_height="match_parent"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="@string/shifts"
          style="@style/pageTitle"/>

   </RelativeLayout>

   <ViewFlipper
       android:id="@+id/vfShift"
       android:layout_below="@id/rlActionBar"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <com.wang.avi.AVLoadingIndicatorView
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:indicatorName="BallSpinFadeLoaderIndicator"
          android:layout_gravity="center"
          app:indicatorColor="?attr/colorIcon1" />

      <ListView
          android:id="@+id/listShift"
          android:divider="@null"
          android:listSelector="@android:color/transparent"
          android:layout_below="@id/rlActionBar"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

      <TextView
          android:id="@+id/txtNull"
          android:layout_centerInParent="true"
          android:gravity="center"
          android:textSize="@dimen/text_title"
          android:textColor="?attr/colorValue"
          android:visibility="gone"
          android:text="هنوز هیچ شیفتی ثبت نشده!"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

      <TextView
          android:layout_centerInParent="true"
          android:gravity="center"
          android:textSize="@dimen/text_title"
          android:textColor="?attr/colorValue"
          android:visibility="gone"
          android:text="متاسفانه هنگام دریافت اطلاعات از سرور به مشکل خوردیم \n لطفا مجدد تلاش کنید!"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

   </ViewFlipper>

</RelativeLayout>