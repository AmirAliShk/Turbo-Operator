                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="70dp"
                            android:text="@string/customerName" />

                        <TextView
                            android:id="@+id/txtCustomerName"
                            style="@style/tripItemValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
