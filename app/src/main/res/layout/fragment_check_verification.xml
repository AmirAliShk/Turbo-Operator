<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryLighter"
    android:clickable="true"
    tools:context=".fragment.CheckVerificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlActionBar"
            android:layout_width="match_parent"
            android:layoutDirection="ltr"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#792ca9">

            <LinearLayout
                android:id="@+id/llChangeNumber"
                android:clickable="true"
                android:background="@drawable/bg_ripple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorWhite"
                    android:text="تغییر شماره"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="کد احراز هویت شما چیست؟"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="ارسال شده به"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/ic_call"/>

            </LinearLayout>

            <ir.taxi1880.operatormanagement.customView.PinEntryEditText
                android:id="@+id/edtCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:textIsSelectable="false"
                android:textSize="@dimen/_30ssp" />

            <ViewFlipper
                android:id="@+id/vfTime"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/txtResendCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="تلاش مجدد برای ارسال کد پس از : 60 ثانیه"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llResendCode"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ارسال مجدد کد احراز هویت"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#3F51B5" />

                    </LinearLayout>

                </RelativeLayout>

                <com.wang.avi.AVLoadingIndicatorView
                    app:indicatorColor="@color/colorPrimaryDark"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="10dp"
                    android:layout_gravity="center" />

            </ViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/vfEnter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_pink_edge">

                    <Button
                        android:id="@+id/btnEnter"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="ورود"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite" />

                    <com.wang.avi.AVLoadingIndicatorView
                        app:indicatorColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center" />

                </ViewFlipper>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>