<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/vfCall"
        android:layout_width="330dp"
        android:layout_height="230dp">



        <LinearLayout

            android:layout_width="330dp"
            android:background="@drawable/bg_gray_lite_edge"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:padding="10dp"
            android:minWidth="330dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llCallSupport"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_green"
                    android:elevation="3dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_online_support" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="پشتیبانی"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTestConnection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_green"
                    android:elevation="3dp"
                    android:padding="25dp"
                    android:src="@drawable/ic_status" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تست ارتباط"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:background="@drawable/bg_gray_lite_edge"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:padding="10dp"
            android:minWidth="330dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/llTransfer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_green"
                        android:elevation="3dp"
                        android:padding="15dp"
                        android:src="@drawable/ic_call_transfer" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="انتقال تماس"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEndCall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_red"
                        android:elevation="3dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_call_end"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="پایان تماس"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>
            </LinearLayout>

            <ViewFlipper
                android:visibility="visible"
                android:id="@+id/vfPause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/llPause"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_yellow"
                        android:elevation="3dp"
                        android:padding="25dp"
                        android:src="@drawable/ic_phone_paused_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="انتظار"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPlay"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_yellow"
                        android:elevation="3dp"
                        android:padding="15dp"
                        android:src="@drawable/ic_play_circle_outline_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="انتقال تماس"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

            </ViewFlipper>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_gray_lite_edge"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:padding="10dp"
            android:minWidth="330dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_red"
                    android:elevation="3dp"

                    android:id="@+id/imgEndCall"
                    android:padding="20dp"
                    android:src="@drawable/ic_call_end" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="پایان تماس"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>


        </LinearLayout>


    </ViewFlipper>

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="20dp"
        android:src="@drawable/ic_close_black_24dp"/>

</LinearLayout>