<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExpandAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="padding">
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="padding_except_bottom">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">23dp</item>
        <item name="android:paddingRight">23dp</item>
    </style>
    
    <style name="linearLayout"  parent="AppBaseTheme">
        <item name="android:background">@drawable/layer_style</item>
        
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@fonts/IRANSanse.ttf</item>
    </style>

</resources>
